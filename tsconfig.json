
{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true, // Set to false and configure outDir if you manually transpile
    "baseUrl": ".",
    "allowImportingTsExtensions": true // Allows importing .ts/.tsx files with extension
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.ts", // Include root .ts files
    "*.tsx"  // Include root .tsx files
  ],
  "exclude": ["node_modules"]
}
